{% extends 'base.html.twig' %}

{% block title %}AUTHENTIFICATION{% endblock %}

{% block dataset %}

{# Nom d'utilisateur précédemment renseigné #}
data-login-last-username="{{ last_username }}"

{# Eventuelles erreurs #}
{% if error %}
  data-login-error="{{ error.messageKey|trans(error.messageData, 'security') }}"
{% endif %}

{# CSRF de sécurité #}
data-login-csrf="{{ csrf_token('authenticate') }}"
{% endblock %}
